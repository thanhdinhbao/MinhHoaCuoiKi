<Window x:Class="MinhHoaCuoiKi.ThongKeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinhHoaCuoiKi"
        mc:Ignorable="d"
        Title="Thống kê lớp" Height="450" Width="800">
    <Grid>
        <DataGrid Name="dgThongKe" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã lớp" Binding="{Binding MaLop}" />
                <DataGridTextColumn Header="Tên lớp" Binding="{Binding TenLop}" />
                <DataGridTextColumn Header="Số nữ" Binding="{Binding SoNu}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
